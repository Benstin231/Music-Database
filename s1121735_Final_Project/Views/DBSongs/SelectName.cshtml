@model IEnumerable<s1121735_Final_Project.Models.Songs>
@{
    ViewData["Title"] = "搜尋結果 - 我的音樂庫";
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --secondary-gradient: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
            --accent-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --card-shadow: 0 20px 40px rgba(0,0,0,0.1);
            --glass-bg: rgba(255, 255, 255, 0.25);
            --glass-border: rgba(255, 255, 255, 0.18);
        }

        body {
            background: var(--primary-gradient);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

            /* 動態背景 */
            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
                z-index: -1;
                animation: float 20s ease-in-out infinite;
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
            }

            33% {
                transform: translateY(-10px) rotate(1deg);
            }

            66% {
                transform: translateY(5px) rotate(-1deg);
            }
        }

        /* 音樂符號動畫 */
        .music-notes {
            position: fixed;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            pointer-events: none;
            z-index: -1;
        }

        .note {
            position: absolute;
            font-size: 20px;
            color: rgba(255, 255, 255, 0.1);
            animation: musicFloat 15s linear infinite;
        }

        @@keyframes musicFloat {
            0% {
                transform: translateY(100vh) rotate(0deg);
                opacity: 0;
            }

            10% {
                opacity: 1;
            }

            90% {
                opacity: 1;
            }

            100% {
                transform: translateY(-100px) rotate(360deg);
                opacity: 0;
            }
        }

        /* 主要容器 */
        .main-container {
            padding: 2rem 0;
            min-height: 100vh;
        }

        /* 玻璃效果卡片 */
        .glass-card {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            box-shadow: var(--card-shadow);
            padding: 2rem;
            margin: 1rem auto;
            max-width: 1200px;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .glass-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 2px;
                background: var(--primary-gradient);
            }

        /* 標題區域 */
        .page-header {
            text-align: center;
            margin-bottom: 2rem;
            color: white;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .title-icon {
            display: block;
            margin: 0 auto 1rem auto;
            font-size: 3rem;
            color: white;
            animation: pulse 2s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }
        }

        .subtitle {
            color: rgba(255, 255, 255, 0.9);
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }

        /* 搜尋資訊 */
        .search-info {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .search-term {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 600;
            color: #495057;
        }

            .search-term .term {
                background: var(--primary-gradient);
                color: white;
                padding: 0.25rem 0.75rem;
                border-radius: 20px;
                font-weight: 500;
            }

        .results-count {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #28a745;
            font-weight: 600;
        }

        /* 表格樣式 */
        .table-container {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

        .custom-table {
            margin: 0;
            width: 100%;
        }

            .custom-table thead {
                background: var(--primary-gradient);
                color: white;
            }

                .custom-table thead th {
                    border: none;
                    padding: 1.2rem 1rem;
                    font-weight: 600;
                    font-size: 0.9rem;
                    text-transform: uppercase;
                    letter-spacing: 0.5px;
                    position: relative;
                }

                    .custom-table thead th:first-child {
                        border-top-left-radius: 20px;
                    }

                    .custom-table thead th:last-child {
                        border-top-right-radius: 20px;
                    }

            .custom-table tbody tr {
                border-bottom: 1px solid rgba(0,0,0,0.05);
                transition: all 0.3s ease;
            }

                .custom-table tbody tr:hover {
                    background: rgba(102, 126, 234, 0.05);
                    transform: translateY(-1px);
                    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
                }

                .custom-table tbody tr:last-child {
                    border-bottom: none;
                }

            /* 表格內容優化 */
            .custom-table tbody td {
                padding: 1rem;
                border: none;
                vertical-align: middle;
                word-wrap: break-word;
                max-width: 150px;
            }

                .custom-table tbody td:first-child {
                    width: 70px;
                    text-align: center;
                }

                .custom-table tbody td:nth-child(2) {
                    min-width: 120px;
                    max-width: 180px;
                }

                .custom-table tbody td:nth-child(3),
                .custom-table tbody td:nth-child(4) {
                    min-width: 100px;
                    max-width: 150px;
                }

                .custom-table tbody td:nth-child(5) {
                    width: 80px;
                    text-align: center;
                }

                .custom-table tbody td:nth-child(6) {
                    width: 90px;
                    text-align: center;
                }

                .custom-table tbody td:nth-child(7) {
                    width: 70px;
                    text-align: center;
                }

                .custom-table tbody td:nth-child(8) {
                    min-width: 120px;
                    max-width: 150px;
                }

                .custom-table tbody td:last-child {
                    width: 120px;
                    text-align: center;
                }

        /* 文字截斷處理 */
        .text-truncate {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

            .text-truncate:hover {
                white-space: normal;
                overflow: visible;
                background: rgba(0,0,0,0.05);
                padding: 0.5rem;
                border-radius: 5px;
                position: relative;
                z-index: 10;
            }

        /* 專輯封面 */
        .album-cover-cell {
            position: relative;
        }

        .album-cover-preview {
            width: 50px;
            height: 50px;
            border-radius: 8px;
            object-fit: cover;
            border: 2px solid rgba(255,255,255,0.5);
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .album-cover-preview:hover {
                transform: scale(1.1);
                border-color: #667eea;
            }

        .no-cover-mini {
            width: 50px;
            height: 50px;
            border-radius: 8px;
            background: rgba(102, 126, 234, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #667eea;
            font-size: 1.2rem;
        }

        /* 時長顯示 */
        .duration-display {
            font-family: 'Courier New', monospace;
            font-weight: 600;
            color: #495057;
            background: rgba(78, 205, 196, 0.1);
            padding: 0.25rem 0.5rem;
            border-radius: 12px;
            font-size: 0.9rem;
        }

        /* 動作按鈕 */
        .action-buttons {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .btn-action {
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
            text-decoration: none;
            font-size: 0.8rem;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
            border: none;
            cursor: pointer;
        }

        .btn-details {
            background: var(--secondary-gradient);
            color: white;
        }

            .btn-details:hover {
                color: white;
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(78, 205, 196, 0.4);
            }

        .btn-edit {
            background: rgba(255, 193, 7, 0.2);
            color: #856404;
            border: 1px solid rgba(255, 193, 7, 0.3);
        }

            .btn-edit:hover {
                background: #ffc107;
                color: white;
                transform: translateY(-1px);
            }

        .btn-delete {
            background: rgba(220, 53, 69, 0.1);
            color: #721c24;
            border: 1px solid rgba(220, 53, 69, 0.3);
        }

            .btn-delete:hover {
                background: #dc3545;
                color: white;
                transform: translateY(-1px);
            }

        /* 頂部按鈕 */
        .top-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .btn-primary-action {
            background: var(--secondary-gradient);
            border: none;
            color: white;
            padding: 1rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 4px 15px rgba(78, 205, 196, 0.3);
        }

            .btn-primary-action:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(78, 205, 196, 0.4);
                color: white;
                text-decoration: none;
            }

        .btn-secondary-action {
            background: rgba(255, 255, 255, 0.2);
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: white;
            padding: 0.8rem 1.5rem;
            border-radius: 50px;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

            .btn-secondary-action:hover {
                background: rgba(255, 255, 255, 0.3);
                color: white;
                text-decoration: none;
                transform: translateY(-2px);
            }

        /* 標籤樣式 */
        .genre-tag {
            background: rgba(102, 126, 234, 0.1);
            color: #667eea;
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .year-tag {
            background: rgba(118, 75, 162, 0.1);
            color: #764ba2;
            padding: 0.25rem 0.5rem;
            border-radius: 8px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        /* 響應式設計 */
        @@media (max-width: 1200px) {
            .glass-card {
                margin: 0.5rem;
                padding: 1.5rem;
            }

            .table-container {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }

            .custom-table {
                min-width: 1000px;
            }

                .custom-table thead th,
                .custom-table tbody td {
                    padding: 0.8rem 0.5rem;
                    font-size: 0.85rem;
                    white-space: nowrap;
                }

            .action-buttons {
                flex-direction: column;
                gap: 0.3rem;
            }

            .btn-action {
                font-size: 0.75rem;
                padding: 0.3rem 0.6rem;
            }
        }

        @@media (max-width: 768px) {
            .glass-card {
                margin: 0.5rem;
                padding: 1rem;
            }

            .page-title {
                font-size: 2rem;
            }

            .search-info {
                flex-direction: column;
                text-align: center;
                gap: 0.5rem;
            }

            .search-term,
            .results-count {
                justify-content: center;
            }

            .table-container {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
                margin: 0 -1rem;
                padding: 0 1rem;
            }

            .custom-table {
                min-width: 900px;
            }

                .custom-table thead th,
                .custom-table tbody td {
                    padding: 0.6rem 0.4rem;
                    font-size: 0.8rem;
                }

                .custom-table thead th {
                    font-size: 0.75rem;
                }

            .album-cover-preview,
            .no-cover-mini {
                width: 40px;
                height: 40px;
            }

            .action-buttons {
                flex-direction: column;
                gap: 0.2rem;
                min-width: 80px;
            }

            .btn-action {
                font-size: 0.7rem;
                padding: 0.25rem 0.5rem;
                justify-content: center;
            }

            .duration-display {
                font-size: 0.75rem;
                padding: 0.2rem 0.4rem;
            }

            .genre-tag,
            .year-tag {
                font-size: 0.7rem;
                padding: 0.2rem 0.5rem;
            }

            .top-actions {
                flex-direction: column;
                align-items: center;
            }

            .btn-primary-action,
            .btn-secondary-action {
                width: 100%;
                max-width: 300px;
                justify-content: center;
            }
        }

        @@media (max-width: 480px) {
            .main-container {
                padding: 1rem 0;
            }

            .glass-card {
                margin: 0.25rem;
                padding: 0.75rem;
            }

            .page-title {
                font-size: 1.8rem;
            }

            .table-container {
                margin: 0 -0.75rem;
                padding: 0 0.75rem;
                border-radius: 15px;
            }

            .custom-table {
                min-width: 800px;
            }

                .custom-table thead th,
                .custom-table tbody td {
                    padding: 0.5rem 0.3rem;
                    font-size: 0.75rem;
                }

            .album-cover-preview,
            .no-cover-mini {
                width: 35px;
                height: 35px;
            }

            .btn-action {
                font-size: 0.65rem;
                padding: 0.2rem 0.4rem;
            }

            .search-info {
                padding: 1rem;
                font-size: 0.9rem;
            }

            .search-term .term {
                font-size: 0.8rem;
                padding: 0.2rem 0.6rem;
            }
        }

        /* 載入動畫 */
        .fade-in {
            animation: fadeIn 0.8s ease-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* 空狀態 */
        .empty-state {
            text-align: center;
            padding: 3rem 2rem;
            color: white;
        }

            .empty-state i {
                font-size: 4rem;
                margin-bottom: 1rem;
                opacity: 0.6;
            }

            .empty-state h3 {
                margin-bottom: 1rem;
                font-size: 1.5rem;
            }

            .empty-state p {
                opacity: 0.8;
                margin-bottom: 2rem;
            }
    </style>
</head>
<body>
    <!-- 音樂符號背景動畫 -->
    <div class="music-notes">
        <div class="note" style="left: 10%; animation-delay: 0s;">♪</div>
        <div class="note" style="left: 20%; animation-delay: 2s;">♫</div>
        <div class="note" style="left: 30%; animation-delay: 4s;">♪</div>
        <div class="note" style="left: 40%; animation-delay: 6s;">♬</div>
        <div class="note" style="left: 50%; animation-delay: 8s;">♪</div>
        <div class="note" style="left: 60%; animation-delay: 10s;">♫</div>
        <div class="note" style="left: 70%; animation-delay: 12s;">♪</div>
        <div class="note" style="left: 80%; animation-delay: 14s;">♬</div>
        <div class="note" style="left: 90%; animation-delay: 16s;">♪</div>
    </div>

    <div class="main-container">
        <div class="container-fluid">
            <!-- 頁面標題 -->
            <div class="page-header fade-in">
                <i class="fas fa-search-plus title-icon"></i>
                <h1 class="page-title">搜尋結果</h1>
                <p class="subtitle">
                    <i class="fas fa-music"></i>
                    找到與您搜尋條件相符的歌曲
                </p>
            </div>

            <div class="glass-card fade-in">
                @if (Model != null && Model.Any())
                {
                    <!-- 搜尋資訊 -->
                    <div class="search-info">
                        <div class="search-term">
                            <i class="fas fa-search"></i>
                            搜尋歌曲：<span class="term">@ViewBag.SearchTerm</span>
                        </div>
                        <div class="results-count">
                            <i class="fas fa-check-circle"></i>
                            找到 @Model.Count() 首歌曲
                        </div>
                    </div>

                    
                    <!-- 歌曲列表 -->
                    <div class="table-container">
                        <table class="custom-table">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-image"></i> 封面</th>
                                    <th><i class="fas fa-music"></i> 歌曲名稱</th>
                                    <th><i class="fas fa-microphone"></i> 演唱者</th>
                                    <th><i class="fas fa-compact-disc"></i> 專輯</th>
                                    <th><i class="fas fa-tags"></i> 類型</th>
                                    <th><i class="fas fa-clock"></i> 時長</th>
                                    <th><i class="fas fa-calendar"></i> 年份</th>
                                    <th><i class="fas fa-plus-circle"></i> 加入日期</th>
                                    <th><i class="fas fa-cogs"></i> 操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="album-cover-cell">
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="/images/@item.ImageUrl"
                                                     alt="@item.Title 專輯封面"
                                                     class="album-cover-preview"
                                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                                <div class="no-cover-mini" style="display: none;">
                                                    <i class="fas fa-music"></i>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="no-cover-mini">
                                                    <i class="fas fa-music"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <div class="text-truncate" title="@item.Title">
                                                <strong>@Html.DisplayFor(modelItem => item.Title)</strong>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-truncate" title="@item.Artist">
                                                @Html.DisplayFor(modelItem => item.Artist)
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-truncate" title="@item.Album">
                                                @Html.DisplayFor(modelItem => item.Album)
                                            </div>
                                        </td>
                                        <td>
                                            <span class="genre-tag">@Html.DisplayFor(modelItem => item.Genre)</span>
                                        </td>
                                        <td>
                                            <span class="duration-display" data-seconds="@item.Duration">
                                                @Html.DisplayFor(modelItem => item.Duration) 秒
                                            </span>
                                        </td>
                                        <td>
                                            <span class="year-tag">@Html.DisplayFor(modelItem => item.ReleaseYear)</span>
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                                        <td>
                                            <div class="action-buttons">
                                                <a asp-action="Details" asp-route-id="@item.SongID" class="btn-action btn-details">
                                                    <i class="fas fa-eye"></i> 詳情
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.SongID" class="btn-action btn-edit">
                                                    <i class="fas fa-edit"></i> 編輯
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.SongID" class="btn-action btn-delete">
                                                    <i class="fas fa-trash"></i> 刪除
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- 底部動作 -->
                    <div class="top-actions">
                        <a asp-action="SelectQuery" class="btn-secondary-action">
                            <i class="fas fa-arrow-left"></i>
                            返回搜尋
                        </a>
                        <a asp-action="Index" class="btn-secondary-action">
                            <i class="fas fa-home"></i>
                            返回音樂庫
                        </a>
                    </div>
                }
                else
                {
                    <!-- 空狀態 -->
                    <div class="empty-state">
                        <i class="fas fa-search-minus"></i>
                        <h3>找不到相符的歌曲</h3>
                        <p>很抱歉，沒有找到與您搜尋條件相符的歌曲。</p>
                        <div class="top-actions">
                            <a asp-action="SelectQuery" class="btn-primary-action">
                                <i class="fas fa-search"></i>
                                重新搜尋
                            </a>
                            <a asp-action="Create" class="btn-secondary-action">
                                <i class="fas fa-plus"></i>
                                新增歌曲
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // 音樂符號動畫隨機化
        function randomizeNotes() {
            const notes = document.querySelectorAll('.note');
            notes.forEach(note => {
                const randomDelay = Math.random() * 20;
                note.style.animationDelay = randomDelay + 's';
                note.style.left = Math.random() * 90 + '%';
            });
        }

        // 格式化時長顯示
        function formatDurations() {
            const durationElements = document.querySelectorAll('.duration-display');
            durationElements.forEach(element => {
                const seconds = parseInt(element.dataset.seconds);
                if (!isNaN(seconds)) {
                    const minutes = Math.floor(seconds / 60);
                    const remainingSeconds = seconds % 60;
                    const formattedTime = `${minutes}:${remainingSeconds.toString().padStart(2, '0')}`;
                    element.innerHTML = `${formattedTime} <small>(${seconds}s)</small>`;
                }
            });
        }

        // 頁面載入完成後執行
        document.addEventListener('DOMContentLoaded', function() {
            randomizeNotes();
            formatDurations();

            // 每30秒重新隨機化音樂符號位置
            setInterval(randomizeNotes, 30000);

            // 專輯封面載入錯誤處理
            const albumCovers = document.querySelectorAll('.album-cover-preview');
            albumCovers.forEach(cover => {
                cover.addEventListener('error', function() {
                    this.style.display = 'none';
                    const noCover = this.nextElementSibling;
                    if (noCover) {
                        noCover.style.display = 'flex';
                    }
                });
            });

            // 確認刪除動作
            const deleteButtons = document.querySelectorAll('.btn-delete');
            deleteButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    const row = this.closest('tr');
                    const songTitle = row.querySelector('td:nth-child(2) strong').textContent;

                    if (!confirm(`確定要刪除歌曲「${songTitle}」嗎？`)) {
                        e.preventDefault();
                    }
                });
            });
        });

        // 表格排序功能（可選）
        function sortTable(columnIndex) {
            const table = document.querySelector('.custom-table');
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr'));

            rows.sort((a, b) => {
                const aVal = a.cells[columnIndex].textContent.trim();
                const bVal = b.cells[columnIndex].textContent.trim();
                return aVal.localeCompare(bVal);
            });

            rows.forEach(row => tbody.appendChild(row));
        }
    </script>
</body>
